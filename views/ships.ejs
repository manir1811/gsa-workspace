<% include ./partials/header %>

<h4 class="center">Vessel Database <a href="/ships/new" class="waves-effect waves-light btn right">Add</a></h4>

    <ul class="collapsible" data-collapsible="accordion">
        <% ships.forEach(function(ship){ %>
        <li>
          <div class="collapsible-header">
                  <div class="row" style="width:100%">
                      <div class="col s3">
                        <%= ship.name %>
                      </div>
                      <div class="col s3">
                        <%= ship.IMO %>
                      </div>
                      <div class="col s3">
                       <%= ship.call %>
                      </div>
                      <div class="col s2">
                        <%= ship.county_of_registry %>
                      </div>
                      <div class="col s1">
                        <a href="/ships/<%= ship._id %>"><i class="material-icons">info_outline</i></a>
                      </div>
              </div>
          </div>
          <div class="collapsible-body grey lighten-4"><span>Lorem ipsum dolor sit amet.</span></div>
        </li>
       <% }); %>
      </ul>

<% include ./partials/footer %>